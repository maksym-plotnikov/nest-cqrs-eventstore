{
    "extends": ["stylelint-config-standard", "stylelint-config-sass-guidelines"],
    "rules": {
        "selector-max-id": 2,
        "indentation": [4, { "baseIndentLevel": 0 }],
        "selector-class-pattern": null,
        "selector-max-compound-selectors": 5,
        "max-nesting-depth": 5,
        "selector-no-qualifying-type": null
    }
}
