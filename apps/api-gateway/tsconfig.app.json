{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": ["node", "jest"],
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "allowJs": false,
        "target": "es2018",
        "sourceMap": true,
        "lib": ["ESNext.BigInt", "ES2020"]
    },
    "exclude": ["**/*.spec.ts"],
    "include": ["**/*.ts"]
}
